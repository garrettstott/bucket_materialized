<h1>BUKKET LIST</h1>
<% if user_signed_in? %>
  <h3>Welcome, <%= current_user.first_name %></h3>
  <br />
  <% current_user.buckets.each do |bucket| %>
    <p><%= link_to bucket.name, bucket_path(bucket) %></p>
    <% bucket.items.each do |item| %>
      <p><%= item.name %><p>
    <% end %>
  <% end %>
  <%= link_to 'New Bucket', new_bucket_path %>
  <%= link_to 'All Buckets', buckets_path(@bucket) %>
<% end %>
<br />
<% if user_signed_in? %>
<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
<% else %>
<%= link_to 'Login', new_user_session_path %>
<%= link_to 'Sign Up', new_user_registration_path %>
<% end %>
