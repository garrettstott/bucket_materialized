<div class="row">
  <div class="col s2 m2">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <p class='card-title title-color'><%= @bucket.name%></p>
        <% @bucket.items.each do |item| %>
          <ul>
            <li><%= item.name %></li>
          </ul>
        <% end %>
      </div>
      <div class="card-action">
        <%= link_to 'Edit Bukkit', edit_bucket_path(@bucket) %>
        <%= link_to 'Items', bucket_items_path(@bucket) %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Delete Bukkit', bucket_path(@bucket), method: :delete, class: 'waves-effect waves-light btn-large margin-left' %>
